{% extends 'EmaRgementBundle::layout.html.twig' %}

{% block title %}Rapports{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"> Rapports de cours </h1>
        </div>
    </div>
    <div class="row">
        <ul>
            {% for coursGroup in listCoursGroup %}
                <li>
                    <div class="paddingH paddingV uiBox bottomBorder" >  
                        <span class="fwb"> {{ coursGroup.dateCours | date('d-m-Y') }} </span>
                    </div>
                    <ul>
                        {% for cours in coursGroup.getCours %}
                            <a href="{{ path('ema_rgement_report_show', {'id': cours.id }) }}">
                                <li class="paddingV"> Rapport du cours de <b> {{ cours.libelle }} </b>  de {{ cours.dateDebut | date('h:i') }} Ã  {{ cours.dateFin | date('h:i') }} </li>
                            </a>
                        {% endfor %}
                    </ul>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}

{% block css %}
    <link href="{{ asset('bundles/emargement/css/views/Default/notificationPage.css') }}" rel="stylesheet" type="text/css">  
{% endblock %}
