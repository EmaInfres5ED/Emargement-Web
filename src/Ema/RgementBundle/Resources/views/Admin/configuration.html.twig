{% extends 'EmaRgementBundle::layout.html.twig' %}

{% block title %}Configuration{% endblock %}

{% block content %}
    <h1 class="page-header"><i class="fa fa-fw fa-gear"></i>Configuration</h1>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Cybema
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <form>
                        <div class="form-group">
                            <label for="cybema_url">Url</label>
                            <input id="cybema_url" class="form-control" value="http://cybema.mines-ales.org" placeholder="Entrez une url cybema valide">
                        </div>
                        <div class="btn-group pull-right">
                            <button class="btn btn-success" type="submit"><i class="fa fa-fw fa-save"></i>Enregistrer</button>
                            <button class="btn btn-danger" type="reset"><i class="fa fa-fw fa-undo"></i>Annuler</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Synchronisation
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <form>
                        <div class="btn-group pull-middle">
                            <button id="refreshCourses" 
                                class="btn btn-primary" 
                                type="button" 
                                data-url="{{ path('ajax_synchronize_course') }}">
                                <i class="fa fa-fw fa-refresh"></i>Synchroniser cours
                            </button>
                            <button id="refreshStudentsPromos" 
                                class="btn btn-primary" 
                                type="button" 
                                data-url="{{ path('ajax_synchronize_students_and_promos') }}">
                                <i class="fa fa-fw fa-refresh"></i>Synchroniser élèves/promotions
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script src="{{ asset('bundles/emargement/js/views/Admin/configuration.js') }}"></script>    
{% endblock %}
