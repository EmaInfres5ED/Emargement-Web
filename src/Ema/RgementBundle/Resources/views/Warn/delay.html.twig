{% extends 'EmaRgementBundle::layout.html.twig' %}
{% form_theme form 'EmaRgementBundle:Form:fields.html.twig' %}

{% block title %}Prévenir d'un retard{% endblock %}

{% block content %}
    <h1 class="page-header" ><i class="fa fa-fw fa-bullhorn"></i><i class="fa fa-fw fa-clock-o"></i>Prévenir d'un retard</h1>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <!--<div class="panel-heading">

                </div>-->
                <!-- /.panel-heading -->
                <div class="panel-body">
	                
                    {{ form_start(form) }}
                        <div class="form-group">
                            <label for="student">Etudiant</label>
                            {{ form_widget(form.nomEleve) }}
                            <p class="help-block">Selectionner l'étudiant qui est en retard</p>
                        </div>
                        <div class="row" >
                            <div class="form-group col-lg-6">
                                <label for="start_date">Date</label>
                                {{ form_widget(form.retardDate) }}
                                <p class="help-block">Date du retard</p>
                            </div>
                            <div class="form-group col-lg-6">
                                <label for="start_time">Durée du retard</label>
                                {{ form_widget(form.retardHour) }}
                                <p class="help-block">Retard theorique de l'étudiant </p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ground" >Motif</label>
                            {{ form_widget(form.motif) }}
                            <p class="help-block">Raison pour laquelle l'étudiant est en retard</p>
                        </div>
                        <div class="btn-group pull-right">
                            <button type="submit" class="btn btn-success"><i class="fa fa-fw fa-save"></i>Enregistrer</button>
                            <button type="reset" class="btn btn-danger"><i class="fa fa-fw fa-undo"></i>Annuler</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
