        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="flash-message">
                    {% for flashMessage in app.session.flashbag.get('success') %}
                        <div class="alert alert-success"><em>Succès</em>: {{ flashMessage }}</div>
                    {% endfor %}
                    {% for flashMessage in app.session.flashbag.get('info') %}
                        <div class="alert alert-info"><em>Information</em>: {{ flashMessage }}</div>
                    {% endfor %}
                    {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="alert alert-warning"><em>Alerte</em>: {{ flashMessage }}</div>
                    {% endfor %}
                    {% for flashMessage in app.session.flashbag.get('error') %}
                        <div class="alert alert-danger"> <em>Erreur</em>: {{ flashMessage }} </div>
                    {% endfor %}
                </div>
            {% block content_header %}{% endblock %}
            {% if code is defined %}
                <h2>Code behind this page</h2>
                <div class="block">
                    <div class="symfony-content">{{ code|raw }}</div>
                </div>
            {% endif %}
            {% block body %}{% endblock %}
            {% block content %}{% endblock %}
            </div> <!-- /.container-fluid -->
        </div> <!-- /#page-wrapper -->
