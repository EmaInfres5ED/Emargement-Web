<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Ema\RgementBundle\Entity\Absence" table="absence">
    <indexes>
      <index name="fk_absence_etudiant_idx" columns="id_eleve"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="motif" type="string" column="motif" length="150" nullable="true"/>
    <field name="dateDebut" type="datetime" column="date_debut" nullable="true"/>
    <field name="dateFin" type="datetime" column="date_fin" nullable="true"/>
    <many-to-one field="idEleve" target-entity="Etudiant">
      <join-columns>
        <join-column name="id_eleve" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
