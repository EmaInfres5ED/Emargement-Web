<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Ema\RgementBundle\Entity\DocumentAbsence" table="document_absence">
    <indexes>
      <index name="fk_document_abs_idx" columns="id_absence"/>
      <index name="fk_abs_document_idx" columns="id_document"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <many-to-one field="idDocument" target-entity="Document">
      <join-columns>
        <join-column name="id_document" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="idAbsence" target-entity="Absence">
      <join-columns>
        <join-column name="id_absence" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
